-var tituloP = "Título Principal"
-var titulos = ["Subtitulo 1", "Subtitulo 2", "Subtitulo 3"]
-var usuario = "Alex"
mixin caja(titulo)
	.caja 
		.caja__imagen: img(src="images/imagen.png")
		.caja__contenido 
			h3 #{titulo}
			p Lorem ipsum dolor sit amet.

doctype html
html
	head
		meta(charset="UTF-8")
		link(rel="stylesheet",href='css/ejercicio-pug.css')
	body
		header
			h1 Lovegram
			if usuario 
				a Hola #{usuario}
			else 
				a.boton Registro
		section.intro 
			.intro__imagen: img(src="images/imagen.png")
			.intro__contenido 
				h2 #{tituloP}
				p. 
					Lorem ipsum dolor sit amet 
					consectetur adipisicing.
				a.boton Leer más
		main.contenido 
			each titulo in titulos 
				+caja(titulo)
